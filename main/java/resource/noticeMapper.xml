<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team5.dao.NoticeDao">
	<!-- 공지사항 리스트/검색 -->
	<select id="noticeList" resultType="notice" parameterType="notice">
		SELECT *
		FROM BOARD WHERE 1=1
		<if test="title!=null">
			AND title LIKE '%'||#{title}||'%'
		</if>
		ORDER BY creatdate DESC 
	</select>
	
	<!-- 공지사항 상세 -->
	<select id="noticeDetail" resultType="notice" parameterType="int">
		SELECT* 
		FROM notice
		WHERE noticeno = #{noticeno}
	</select>
	
	<!-- 공지사항 등록 -->
	<insert id="noticeInsert" parameterType="notice">
		INSERT INTO notice VALUES(notice_seq.nextval,#{pno},#{title},#{content},sysdate,0);
	</insert>
	
	<!-- 공지사항 수정 -->
	<update id="noticeUpdate" parameterType="notice">
		update notice
			set title = #{title},
				content = #{content}
		where noticeno = #{noticeno}
	</update>
	
	<!-- 공지사항 조회수 -->
	<update id="readCountup" parameterType="int">
		update notice
			set views = views+1
		where noticeno = #{noticeno}
	</update>
	
	<!-- 공지사항 삭제 -->
	<delete id="noticeDelete" parameterType="int">
			delete
			from notice
			where noticeno = #{noticeno}
	</delete>
</mapper>
